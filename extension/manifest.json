{
    "manifest_version": 3,
    "name": "dhaqsoPay",
    "version": "1.0.0",
    "description": "Test payments directly in your browser with dhaqsoPay.",
    "action": {
      "default_popup": "dashboard.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "storage"
    ],
    "host_permissions": [
      "ws://localhost/*"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
  